<UserControl x:Class="Client.Views.ShowInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Views"
             mc:Ignorable="d" Height="280" Width="370">
    <Grid>
        <Label x:Name="TitleLabel" Content="System informations:" HorizontalAlignment="Left" Height="26" Margin="121,10,0,0" VerticalAlignment="Top" Width="135"/>
        <ListView FontSize="12" Margin="10,41,10,10" Name="lvDataBinding" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Region}"/>
                    <GridViewColumn Header="City" DisplayMemberBinding="{Binding Grad}"/>
                    <GridViewColumn Header="Year" DisplayMemberBinding="{Binding Godina}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
